@{
    ViewData["Title"] = "Kontakt - ";
}
@model DavidBekeris.Models.ContactFormModel
@if (ViewBag.EmailSent != null && ViewBag.EmailSent == true)
{
    <div class="confirmation-message text-center my-4 p-3 border rounded">
        <h5 class="text-success">✅ Meddelande har skickats!</h5>
        <p>Tack för att du kontaktar mig. Återkommer så fort jag kan.</p>
    </div>
}

<!-- Contact 5 - Bootstrap Brain Component -->
<section class="col-12 py-3 py-md-5 py-xl-8">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-12">
                <h2 class="fs-5 mb-2 text-secondary text-uppercase">Kontakt</h2>
                <h4 class="display-5 mb-4 mb-md-5 mb-xl-8">Alltid öppen för förslag eller att bara prata.</h4>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row gy-4 gy-md-5 gy-lg-0 align-items-md-center">
            <div class="col-12 col-lg-6">
                <div class="border overflow-hidden rounded">
                    <form asp-action="Kontakt" asp-controller="Home" method="post">
                        <div class="row gy-4 gy-xl-5 p-4 p-xl-5">
                            <div class="col-12">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                        </svg>
                                    </span>
                                    <input asp-for="Email" class="form-control" id="email" name="email" value="" required>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
            
                            <div class="col-12">
                                <label asp-for="Subject" class="form-label">Ämne<span class="text-danger">*</span></label>
                                <input asp-for="Subject" class="form-control" id="subject" name="subject" value="" required>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Message" class="form-label">Meddelande<span class="text-danger">*</span></label>
                                <textarea asp-for="Message" class="form-control" id="message" name="message" rows="4" required></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <input type="hidden" id="RecaptchaToken" name="RecaptchaToken" />
                            <div class="col-12">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">Skicka meddelande</button>
                                </div>
                            </div>
                            
                        </div>
                    </form>

                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="row justify-content-xl-center">
                    <div class="col-12 col-xl-11">
                        <div class="row mb-sm-4 mb-md-5">
                            <div class="col-12 col-sm-6">
                                <div class="mb-4 mb-sm-0">
                                    <div class="mb-3 text-primary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-envelope-at" viewBox="0 0 16 16">
                                            <path d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2H2Zm3.708 6.208L1 11.105V5.383l4.708 2.825ZM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2-7-4.2Z" />
                                            <path d="M14.247 14.269c1.01 0 1.587-.857 1.587-2.025v-.21C15.834 10.43 14.64 9 12.52 9h-.035C10.42 9 9 10.36 9 12.432v.214C9 14.82 10.438 16 12.358 16h.044c.594 0 1.018-.074 1.237-.175v-.73c-.245.11-.673.18-1.18.18h-.044c-1.334 0-2.571-.788-2.571-2.655v-.157c0-1.657 1.058-2.724 2.64-2.724h.04c1.535 0 2.484 1.05 2.484 2.326v.118c0 .975-.324 1.39-.639 1.39-.232 0-.41-.148-.41-.42v-2.19h-.906v.569h-.03c-.084-.298-.368-.63-.954-.63-.778 0-1.259.555-1.259 1.4v.528c0 .892.49 1.434 1.26 1.434.471 0 .896-.227 1.014-.643h.043c.118.42.617.648 1.12.648Zm-2.453-1.588v-.227c0-.546.227-.791.573-.791.297 0 .572.192.572.708v.367c0 .573-.253.744-.564.744-.354 0-.581-.215-.581-.8Z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="mb-2">Email</h4>
                                        <p class="mb-2">Kan också nå mig på denna email.</p>
                                        <hr class="w-75 mb-3 border-dark-subtle">
                                        <p class="mb-0">
                                            <a class="link-secondary text-decoration-none" href="mailto:davidbekeris@hotmail.com">davidbekeris@hotmail.com</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>